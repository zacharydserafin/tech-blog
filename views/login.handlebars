<div class="center-flex">
    <div class="login-cards">
        <form class="login m5 border login-card">
            <h3 class="title-nl level-item">Log In</h3>
            <div class="field">
                <div class="control">
                    <label class="label" for="username">Username:</label>
                    <input class="input is-medium"type="text" id="username" name="username">
                </div>
            </div>    
            <div class="field">
                <div class="control">
                    <label class="label" for="password">Password:</label>
                    <input class="input is-medium" type="password" id="password" name="password">
                </div>
            </div>
            <button class="button is-link is-medium" type="submit">Log In</button>
        </form>

        <form class="signup m5 border login-card">
            <h3 class="level-item title-nl">Sign Up</h3>
            <div class="field">
                <div class="control">
                    <label class="label" for="signup-username">Username:</label>
                    <input class="input is-medium" type="text" id="signup-username" name="username">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label class="label" for="signup-password">Password:</label>
                    <input class="input is-medium" type="password" id="signup-password" name="password">
                </div>
            </div>
            <button class="button is-link is-medium center-flex" type="submit">Sign Up</button>
        </form>
    </div>
</div>
<script src="/js/login.js"></script>